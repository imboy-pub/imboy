FROM postgres:16-bullseye

LABEL maintainer="PostGIS Project - https://postgis.net" \
      org.opencontainers.image.description="PostGIS 3.4.2+dfsg-1.pgdg110+1 spatial database extension with PostgreSQL 16 bullseye" \
      org.opencontainers.image.source="https://github.com/postgis/docker-postgis"

ENV POSTGIS_MAJOR 3
ENV POSTGIS_VERSION 3.4.2+dfsg-1.pgdg110+1
ENV TIMESCALEDB_VERSION 2.16.1
ENV PGROUTING_VERSION 3.6.2

RUN apt-get update \
      && apt-cache showpkg postgresql-$PG_MAJOR-postgis-$POSTGIS_MAJOR \
      && apt-get install -y --no-install-recommends \
           # ca-certificates: for accessing remote raster files;
           #   fix: https://github.com/postgis/docker-postgis/issues/307
           ca-certificates \
           \
           postgresql-$PG_MAJOR-postgis-$POSTGIS_MAJOR=$POSTGIS_VERSION \
           postgresql-$PG_MAJOR-postgis-$POSTGIS_MAJOR-scripts \
      && rm -rf /var/lib/apt/lists/*

# for timescaledb
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    ca-certificates \
    postgresql-server-dev-16 \
    build-essential \
    libpq-dev \
    cmake \
    git \
  && cd / && git clone https://gitee.com/imboy-tripartite-deps/timescaledb.git \
  && cd /timescaledb &&  git checkout $TIMESCALEDB_VERSION \
  && ./bootstrap -DPG_CONFIG=/usr/lib/postgresql/16/bin/pg_config . \
  && cd ./build && make && make install && cd / && rm -rf /timescaledb

RUN set -xe \
  && apt-get install -y -V postgresql-16-pgvector \
  && cd / && git clone https://gitee.com/imboy-tripartite-deps/pg_roaringbitmap.git \
  && cd /pg_roaringbitmap && git checkout -f master && git submodule update --init --recursive \
  && make && make install && cd / && rm -rf /pg_roaringbitmap

RUN set -xe \
  && cd / && git clone https://gitee.com/imboy-tripartite-deps/pg_jieba.git \
  && cd /pg_jieba && git checkout -f master && git submodule update --init --recursive \
  && mkdir build && cd build && cmake -DPostgreSQL_TYPE_INCLUDE_DIR=/usr/include/postgresql/16/server .. \
  && make && make install && cd / && rm -rf /pg_jieba

RUN set -xe \
  && apt-get install -y libboost-all-dev \
  && cd / && git clone https://gitee.com/imboy-tripartite-deps/pgrouting.git \
  && cd /pgrouting && git checkout tags/v$PGROUTING_VERSION \
  && mkdir build && cd build && cmake .. \
  && make && make install && cd / && rm -rf /pgrouting

COPY ./docker/pg_jieba_userdict.txt.big /usr/share/postgresql/16/tsearch_data/jieba_user.dict
COPY ./docker/pg-initdb-postgis.sh /docker-entrypoint-initdb.d/10_postgis.sh
COPY ./docker/pg-update-postgis.sh /docker-entrypoint-initdb.d/21_postgis.sh
COPY ./docker/pg-update-imboy.sh /docker-entrypoint-initdb.d/22_imboy.sh
RUN chmod -x /docker-entrypoint-initdb.d/10_postgis.sh

# 清理不再需要的包
RUN set -xe \
  && apt-get purge -y --auto-remove libpq-dev postgresql-server-dev-16 \
  && apt-get purge -y --autoremove \
        build-essential \
        libboost-all-dev \
        binutils \
        binutils-common \
        binutils-x86-64-linux-gnu \
        bzip2 \
