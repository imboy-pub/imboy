        libasan6 \
        libatomic1 \
        libbinutils \
        libc-dev-bin \
        libc6-dev \
        libc6-i386 \
        libcc1-0 \
        libclang-common-13-dev \
        libclang-cpp13 \
        libclang1-13 \
        libcrypt-dev \
        libctf-nobfd0 \
        libctf0 \
        libcurl4 \
        libdpkg-perl \
        liberror-perl \
        libffi-dev \
        libgc1 \
        libgcc-10-dev \
        libgomp1 \
        libicu-dev \
        libisl23 \
        libitm1 \
        libjsoncpp24 \
        liblsan0 \
        libmpc3 \
        libmpdec3 \
        libncurses-dev \
        libncurses6 \
        libnsl-dev \
        libobjc-10-dev \
        libobjc4 \
        libpfm4 \
        libpq-dev \
        libprocps8 \
        libpython3-stdlib \
        libpython3.9-minimal \
        libpython3.9-stdlib \
        librhash0 \
        libssl-dev \
        libstdc++-10-dev \
        libtinfo-dev \
        libtirpc-dev \
        libtsan0 \
        libubsan1 \
        libuv1 \
        libxml2-dev \
        libyaml-0-2 \
        libz3-dev \
        linux-libc-dev \
        llvm-13 \
        llvm-13-dev \
        llvm-13-linker-tools \
        llvm-13-runtime \
        llvm-13-tools \
        make \
        media-types \
        patch \
        procps \
        python3 \
        python3-minimal \
        python3-pkg-resources \
        python3-pygments \
        python3-yaml \
        python3.9 \
        python3.9-minimal \
  && apt-get autoremove -y \
  && apt-get clean \
  && apt clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/*


RUN set -xe \
  && mkdir -p /docker-entrypoint-initdb.d \
  && chmod -x /docker-entrypoint-initdb.d/10_postgis.sh \
  && chmod -x /docker-entrypoint-initdb.d/21_postgis.sh \
  && chmod -x /docker-entrypoint-initdb.d/22_imboy.sh \
  && chown -R postgres:postgres /var/lib/postgresql/data \
  && echo 'alias ll="ls -la --color=auto"' >> ~/.bashrc \
  && echo 'export PS1="\[\e]0;\a\]\n\[\e[1;32m\]\[\e[1;33m\]\H\[\e[1;35m\]<\$(date +\"%Y-%m-%d %T\")> \[\e[32m\]\w\[\e[0m\]\n\u>\\$ "' >> ~/.bashrc
